<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_theme"
        android:visibility="gone">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/dim_5"
            android:paddingLeft="@dimen/dim_5"
            android:src="@drawable/logo_actionbar" />

    </RelativeLayout>


    <com.app.vetscount.textstyle.RegularTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_light"
        android:gravity="center"
        android:padding="@dimen/dim_5"
        android:text="Please Select Business Category"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/dim_14" />

    <ListView
        android:id="@+id/categoryListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/blue_theme"
        android:dividerHeight="@dimen/dim_1"></ListView>


</LinearLayout>