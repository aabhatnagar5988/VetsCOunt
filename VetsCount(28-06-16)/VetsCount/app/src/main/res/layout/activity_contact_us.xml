<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dim_15">


        <com.app.vetscount.textstyle.RegularEditText
            android:id="@+id/nameTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_15"
            android:background="@drawable/input"
            android:hint="Name"
            android:padding="@dimen/dim_10"
            android:textColor="@color/grey_dark"
            android:textColorHint="@color/grey_dark"
            android:textSize="@dimen/dim_16" />

        <com.app.vetscount.textstyle.RegularEditText
            android:id="@+id/emailTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_15"
            android:background="@drawable/input"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/dim_10"
            android:textColor="@color/grey_dark"
            android:textColorHint="@color/grey_dark"
            android:textSize="@dimen/dim_16" />

        <com.app.vetscount.textstyle.RegularEditText
            android:id="@+id/phoneTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_15"
            android:background="@drawable/input"
            android:hint="Phone"
            android:inputType="phone"
            android:padding="@dimen/dim_10"
            android:textColor="@color/grey_dark"
            android:textColorHint="@color/grey_dark"
            android:textSize="@dimen/dim_16" />

        <com.app.vetscount.textstyle.RegularEditText
            android:id="@+id/feedbackTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_15"
            android:background="@drawable/input_feedback_rounded"
            android:gravity="left|top"
            android:hint="Feedback"
            android:lines="5"
            android:padding="@dimen/dim_10"
            android:textColor="@color/grey_dark"
            android:textColorHint="@color/grey_dark"
            android:textSize="@dimen/dim_16" />


    </LinearLayout>

   <com.app.vetscount.activities.RippleView

        android:id="@+id/postRV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_18"
        android:background="@color/blue_theme"
        android:padding="@dimen/dim_15"
        ripple:rv_centered="true"
        ripple:rv_rippleDuration="100"
        ripple:rv_zoom="true">


        <com.app.vetscount.textstyle.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"


            android:gravity="center"
            android:text="Post"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_16" />
   </com.app.vetscount.activities.RippleView>
</RelativeLayout>